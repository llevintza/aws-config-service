{
  "name": "aws-config-service",
  "version": "1.0.0",
  "description": "A simple but optimized REST api service that loads configurations for tenant, environment, cloud, service",
  "main": "dist/server.js",
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/server.js",
    "start:dev": "yarn build && yarn start",
    "dev": "ts-node-dev --respawn --transpile-only --clear --notify false src/server.ts",
    "dev:watch": "concurrently \"yarn build:watch\" \"nodemon dist/server.js\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -t aws-config-service .",
    "docker:run": "docker run -p 3000:3000 aws-config-service",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down"
  },
  "keywords": ["nodejs", "typescript", "fastify", "rest-api", "docker", "swagger"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/cors": "^8.4.0",
    "ajv": "^8.12.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "nodemon": "^3.0.2",
    "pino-pretty": "^10.3.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
