{
  "name": "aws-config-service",
  "version": "1.0.0",
  "description": "A simple but optimized REST api service that loads configurations for tenant, environment, cloud, service",
  "main": "dist/server.js",
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/server.js",
    "start:dev": "yarn build && yarn start",
    "dev": "ts-node-dev --respawn --transpile-only --clear --notify false src/server.ts",
    "dev:watch": "concurrently \"yarn build:watch\" \"nodemon dist/server.js\"",
    "stop": "pkill -TERM -f 'node dist/server.js' || echo 'No running server found'",
    "stop:force": "pkill -KILL -f 'node dist/server.js' || echo 'No running server found'",
    "restart": "yarn stop && sleep 2 && yarn start",
    "restart:dev": "yarn stop && sleep 2 && yarn dev",
    "status": "ps aux | grep 'node dist/server.js' | grep -v grep || echo 'Server not running'",
    "port:check": "lsof -i :3000 || echo 'Port 3000 is free'",
    "port:free": "lsof -ti:3000 | xargs kill -TERM || echo 'Port 3000 is already free'",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json}' '*.{json,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,js,json}' '*.{json,md}'",
    "type-check": "tsc --noEmit",
    "pre-commit": "lint-staged",
    "docker:build": "docker build -t aws-config-service .",
    "docker:run": "docker run -p 3000:3000 aws-config-service",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:stop": "docker-compose stop",
    "docker:restart": "docker-compose restart",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.ts": [
      "bash -c 'tsc --noEmit'"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "nodejs",
    "typescript",
    "fastify",
    "rest-api",
    "docker",
    "swagger"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/cors": "^8.4.0",
    "ajv": "^8.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
