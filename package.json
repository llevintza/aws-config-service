{
  "name": "aws-config-service",
  "version": "1.0.0",
  "description": "A simple but optimized REST api service that loads configurations for tenant, environment, cloud, service",
  "main": "dist/server.js",
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/server.js",
    "start:dev": "yarn build && yarn start",
    "dev": "ts-node-dev --respawn --transpile-only --clear --notify false src/server.ts",
    "dev:watch": "concurrently \"yarn build:watch\" \"nodemon dist/server.js\"",
    "debug": "ts-node-dev --respawn --transpile-only --clear --notify false --inspect=9229 src/server.ts",
    "debug:brk": "ts-node-dev --respawn --transpile-only --clear --notify false --inspect-brk=9229 src/server.ts",
    "debug:compiled": "yarn build && node --inspect=9229 dist/server.js",
    "debug:compiled:brk": "yarn build && node --inspect-brk=9229 dist/server.js",
    "stop": "pkill -TERM -f 'node dist/server.js' || echo 'No running server found'",
    "stop:force": "pkill -KILL -f 'node dist/server.js' || echo 'No running server found'",
    "restart": "yarn stop && sleep 2 && yarn start",
    "restart:dev": "yarn stop && sleep 2 && yarn dev",
    "status": "ps aux | grep 'node dist/server.js' | grep -v grep || echo 'Server not running'",
    "port:check": "lsof -i :3000 || echo 'Port 3000 is free'",
    "port:free": "lsof -ti:3000 | xargs kill -TERM || echo 'Port 3000 is already free'",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts --max-warnings 0",
    "format": "prettier --write 'src/**/*.{ts,js,json}' '*.{json,md,yml,yaml}'",
    "format:check": "prettier --check 'src/**/*.{ts,js,json}' '*.{json,md,yml,yaml}'",
    "format:diff": "prettier --list-different 'src/**/*.{ts,js,json}' '*.{json,md,yml,yaml}'",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "pre-commit": "lint-staged",
    "docker:build": "docker build -t aws-config-service .",
    "docker:run": "docker run -p 3000:3000 aws-config-service",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:stop": "docker-compose stop",
    "docker:restart": "docker-compose restart",
    "docker:dynamodb": "docker-compose -f docker-compose.dynamodb.yml up -d",
    "docker:dynamodb:down": "docker-compose -f docker-compose.dynamodb.yml down",
    "dynamodb:create-table": "ts-node scripts/create-table.ts",
    "dynamodb:migrate": "ts-node scripts/migrate-to-dynamodb.ts",
    "prepare": "husky install",
    "check-prerequisites": "./scripts/check-prerequisites.sh",
    "ci:test-local": "./scripts/test-ci-locally.sh",
    "ci:test-dynamodb": "./scripts/test-dynamodb.sh",
    "ci:test-docker": "./scripts/test-docker-build.sh",
    "ci:test-compose": "docker-compose -f docker-compose.ci-test.yml up --build --abort-on-container-exit",
    "ci:quality-check": "yarn type-check && yarn lint:check && yarn format:check"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "fastify",
    "rest-api",
    "docker",
    "swagger"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.511.0",
    "@aws-sdk/lib-dynamodb": "^3.511.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "ajv": "^8.12.0",
    "fastify": "^4.24.3",
    "fastify-plugin": "5.0.1",
    "winston": "3.17.0",
    "winston-daily-rotate-file": "5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/jest": "^29.5.5",
    "@types/node": "24.1.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
